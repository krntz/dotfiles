configuration {
window-format: "{n}";
}

* {
background-color:      #1d1f21;
border-color:          #ffffff44;
text-color:            #c5c8c6;
font:                  "Product Sans Bold 14";
}

#window {
anchor:     north;
location:   north;
width:      100%;
padding:    14px 36px 16px 48px;
children:   [ horibox ];
}

#horibox {
orientation: horizontal;
children:   [ entry ];
}

#entry {
expand:     false;
width:      100%;
}
